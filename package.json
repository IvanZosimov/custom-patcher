{
  "name": "custom-patcher",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/IvanZosimov/custom-patcher",
  "scripts": {
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node16 --minify --tree-shaking=true  --banner:js=\"#!/usr/bin/env node\" --outfile=dist/index.js",
    "dev": "tsx ./src/index.ts",
    "prepublish": "npm run build"
  },
  "bin": {
    "custom-patcher": "./dist/index.js"
  },
  "keywords": ["cli", "tool", "nodejs", "custom", "version"],
  "author": "mumutoje",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.8",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "chalk": "^5.4.1",
    "simple-git": "^3.27.0",
    "yargs": "^17.7.2"
  }
}